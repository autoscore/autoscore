Package: autoscore
Type: Package
Title: Automatically Score Word Identification in Speech Perception
Version: 0.4.0
Date: 2018-11-12
Authors@R: c(person("Tyson S.", "Barrett",  
                    role=c("aut","cre"), 
                    email = "t.barrett@aggiemail.usu.edu", 
                    comment = c(ORCID = "0000-0002-2137-1391")),
